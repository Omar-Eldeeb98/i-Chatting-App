<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-61dp"

        android:src="@drawable/cover" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/visit_profile_image_view"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@+id/image_view"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_photo" />

    <TextView
        android:id="@+id/visit_user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="user name"
        android:layout_below="@+id/visit_profile_image_view"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/visit_user_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="user status"
        android:layout_below="@+id/visit_user_name_text_view"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:layout_marginTop="2dp"/>


    <Button
        android:id="@+id/send_message_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/custom_buttons_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff"
        android:text="send message request "
        android:layout_below="@+id/visit_user_status_text_view"/>



    <Button
        android:id="@+id/decline_message_request_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/custom_buttons_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:text="cancel chat request"
        android:visibility="invisible"
        android:layout_below="@+id/send_message_request_button"/>






</RelativeLayout>