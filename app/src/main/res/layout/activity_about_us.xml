<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AboutUsActivity">

    <include
        android:id="@+id/about_us_toolbar"
        layout="@layout/app_bar_about_us">

    </include>

    <ScrollView
        android:layout_below="@+id/about_us_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="ABOUT US"
                android:layout_marginBottom="4dp"
                android:textColor="#4A4848"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_0"
                android:layout_below="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView0">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/dev_omar_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginTop="16dp"
                        android:padding="4dp"
                        android:text="About Developer:"
                        android:textColor="#C8C1C1"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.187"
                        app:layout_constraintStart_toEndOf="@+id/circleImageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:text="Hi ! , My Name Is Omar Eldeeb (OE57) , i am a Software Engineer Graduated from Faculty of Computers and Information , I am a Java Android Developer  , Full Stack Web Developer , interested in database Administration. "
                        android:layout_marginLeft="8dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#A6ACAF"
                        android:textStyle="italic"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.17"
                        app:layout_constraintStart_toEndOf="@+id/circleImageView"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_0"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/app_logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/thefinalone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginTop="16dp"
                        android:padding="4dp"
                        android:text="About App:"
                        android:textColor="#C8C1C1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.187"
                        app:layout_constraintStart_toEndOf="@+id/app_logo"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:text="i CHATTING ,  Is A Simple Chatting App That Make You Send  Text Messages and Photos with Freinds ,
User Can Register in The App Using Email and Password Or By Using Phone Number. "
                        android:layout_marginLeft="8dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textColor="#A6ACAF"
                        android:padding="8dp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.17"
                        app:layout_constraintStart_toEndOf="@+id/app_logo"
                        app:layout_constraintTop_toBottomOf="@+id/textView_"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="8dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="FOLLOW US:"
                        android:textColor="#C8C1C1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <LinearLayout

                        android:layout_marginTop="8dp"
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">


                        <ImageView

                            android:id="@+id/github_image_view"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/github0"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"

                            />

                        <ImageView
                            android:id="@+id/stackOverFlow_image_view"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/stackoverflow"
                            android:background="@color/colorPrimaryDark"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="20dp"
                            />

                        <ImageView

                            android:id="@+id/twitter_image_view"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/twitter"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/colorPrimaryDark"
                            />

                        <ImageView

                            android:id="@+id/facebook_image_view"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/facebook"
                            android:background="@color/colorPrimaryDark"
                            />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/cc"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/card_view_2"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/thefinalone" />

            <ImageView
                android:id="@+id/bb"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/cc"
                android:layout_below="@id/card_view_2"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/cover" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@id/card_view_2"
                android:layout_toLeftOf="@+id/cc"
                android:src="@drawable/cover_"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cc"
                android:text="BY:OE57"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#4A4848"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="16sp"/>

















        </RelativeLayout>







    </ScrollView>




</RelativeLayout>





